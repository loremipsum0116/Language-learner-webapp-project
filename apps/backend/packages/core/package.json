{
  "name": "@language-learner/core",
  "version": "1.0.0",
  "description": "Core domain logic and business rules for Language Learner application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "language-learning",
    "srs",
    "vocabulary",
    "domain-logic",
    "clean-architecture"
  ],
  "author": "Language Learner Team",
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.18",
    "lodash": "^4.17.21",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "jest": "^30.1.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./domain": {
      "import": "./dist/domain/index.js",
      "require": "./dist/domain/index.js",
      "types": "./dist/domain/index.d.ts"
    },
    "./application": {
      "import": "./dist/application/index.js",
      "require": "./dist/application/index.js",
      "types": "./dist/application/index.d.ts"
    },
    "./infrastructure": {
      "import": "./dist/infrastructure/index.js",
      "require": "./dist/infrastructure/index.js",
      "types": "./dist/infrastructure/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "restricted"
  }
}
