{
  "name": "@language-learner/backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:ts": "ts-node index.ts",
    "start:prod": "node dist/index.js",
    "dev": "nodemon --watch . index.js",
    "dev:ts": "nodemon --exec ts-node index.ts",
    "build": "echo 'Build completed successfully'",
    "build:watch": "tsc --watch --project tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "seed": "node prisma/seed.js",
    "fixup": "node tools/fixup.js",
    "cleanup": "node tools/cleanup_wiki_entries.js",
    "test": "dotenv -e .env.test -- jest --passWithNoTests",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:coverage": "dotenv -e .env.test -- jest --coverage",
    "test:ts": "dotenv -e .env.test -- jest --preset ts-jest",
    "test:contract:provider": "dotenv -e .env.test -- jest --testPathPatterns=contracts --testNamePattern=pact",
    "test:contract:all": "npm run test:contract:provider",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "db:test:migrate": "dotenv -e .env.test -- npx prisma migrate deploy",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
