{
  "name": "language-learner-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "build:ios": "npx react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "analyze:tree": "node scripts/tree-shake-analyzer.js",
    "optimize": "node scripts/optimize-bundle.js",
    "bundle:visualize": "npx react-native-bundle-visualizer",
    "bundle:report": "npm run analyze:bundle && npm run analyze:tree",
    "clean:cache": "npm start -- --clear-cache",
    "clean:modules": "rm -rf node_modules && npm install",
    "test:bundle": "npm run build:android && npm run analyze:bundle",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:ios": "detox test --configuration ios.sim.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug",
    "e2e:test": "detox test",
    "postinstall": "cd ios && pod install || true"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@react-navigation/bottom-tabs": "^6.5.20",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "@shopify/flash-list": "^2.0.3",
    "expo-av": "~14.0.7",
    "expo-constants": "~16.0.1",
    "expo-linear-gradient": "^14.1.5",
    "expo-linking": "~6.3.1",
    "expo-splash-screen": "~0.27.4",
    "expo-status-bar": "~1.12.1",
    "lodash": "^4.17.21",
    "metro-core": "^0.83.1",
    "react": "18.2.0",
    "react-native": "^0.74.5",
    "react-native-fast-image": "^8.6.3",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "^4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-super-grid": "^6.0.2",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.21.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~18.2.45",
    "detox": "^20.41.1",
    "expo": "^53.0.22",
    "jest": "^30.1.3",
    "jest-circus": "^30.1.3",
    "jest-junit": "^16.0.0",
    "metro": "^0.80.12",
    "react-native-bundle-visualizer": "^3.1.3",
    "react-test-renderer": "^18.2.0",
    "typescript": "~5.3.3",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "private": true
}
